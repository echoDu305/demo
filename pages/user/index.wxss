/* pages/user/index.wxss */
page {
  background-color: #edece8;
}
.user_info_wrap{
  height:45vh;
  overflow:hidden;
  position: relative;
  background-color: #4D36FC;
}
.user_img_wrap{
  position: relative;
}

.user_bg{
  width: 100%;
  height:50vh;
  filter:blur(10rpx);
}
.user_info{
  position: absolute;
  left:50%;
  transform:translateX(-50%);
  top:20%;
  text-align:center;
}
.user_icon{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.user_name{
  color:#fff;
  margin-top:40rpx;
  font-size:40rpx;
}
.user_btn{
  position: absolute;
  left:50%;
  transform:translateX(-50%);
  top:40%;
  border:1rpx solid #fff;
  color:#fff;
  font-size:38rpx;
  padding-top:100rpx;
  padding:30rpx;
  border-radius:10rpx;
}


text{
  font-size:20px;
}

.user_content {
  position: relative;
}
.user_content .user_main {
  padding-bottom: 100rpx;
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}



.user_content .user_main .address_wrap {
  width: 750rpx;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
.user_content .user_main .app_info_wrap {
  width:750rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  width:750rpx;
  padding: 20rpx ;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .app_info_wrap .app_info_contact {
  width:725rpx;
  display: flex;
  justify-content: space-between;
}